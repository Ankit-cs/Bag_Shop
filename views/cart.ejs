<%- include('./partials/header') %>

<% if (user.cart && user.cart.length > 0) { %>
  <% user.cart.forEach(function(item) { %>
    <div class="w-full h-screen flex items-start px-20 py-20 gap-10">
      <div class="w-[30%] rounded-md overflow-hidden">
        <div class="w-full h-80 bg-[<%= item.bgcolor || '#ffffff' %>]">
          <% if (item.image) { %>
            <img class="h-[18rem]" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="">
          <% } else { %>
            <p class="text-red-500">No Image Available</p>
          <% } %>
        </div>
        <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.panelcolor || '#ddd' %>]">
          <h3 class="text-2xl">Clinge Bag</h3>
          <div class="flex items-center gap-2">
            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
            <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
          </div>
        </div>
        <div class="flex text-white items-center justify-between px-5 py-3 bg-[<%= item.textcolor || '#000' %>]">
          <h4 class="text-lg">Net Total</h4>
          <h2 class="text-lg">â‚¹ <%= bill %></h2>
        </div>
      </div>
    </div>
  <% }); %>
<% } else { %>
  <p class="text-center text-gray-500 text-xl">Your cart is empty.</p>
<% } %>

<%- include('./partials/footer') %>
